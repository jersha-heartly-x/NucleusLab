<%-include ('partials/header_lab') %>

<% if(locals.table.length) { %>
<div class="schedule rounded p-3 mx-lg-1">

    <h4 class="m-5">Router Updation</h4>

    <table class="table text-center">
            
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Roll No</th>
                <th scope="col">Name</th>
                <th scope="col">Model</th>
                <th scope="col">MAC</th>
                <th scope="col">Type</th>
                <th scope="col">Mobile</th>
                <th scope="col">Status</th>
                <th scope="col">Existing Router</th>
                <th scope="col">Router Name</th>
                <th scope="col">Status Update</th>
            </tr>
        </thead>

        <tbody>
            <% for(var i=0; i<table.length; i++) { %>
            <form action="/wifi-requests" method="post">
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= table[i].rollNo %></td>
                    <td><%= table[i]._name %></td>
                    <td><%= table[i].model %></td>
                    <td><%= table[i].mac %></td>
                    <td><%= table[i]._type %></td>
                    <td><%= table[i].mobile %></td>
                    <% if(table[i]._status === "Live") { %>
                    <td style="color: green;"><%= table[i]._status %></td>
                    <% } else { %>
                    <td style="color: red;"><%= table[i]._status %></td>
                    <% } %>
                    <td><%= table[i].routerName %></td>
                    <td>
                        <input type="text" name="rno" value="<%= table[i].rollNo %>" hidden>
                        <select name="router" class="form-select">
                            <option value="AMCS LAB">AMCS LAB</option>
                            <option value="AMCS LAB 1">AMCS LAB 1</option>
                            <option value="AMCS LAB 2">AMCS LAB 2</option>
                        </select>
                    </td>
                    <td>
                        <input class="btn btn-success rounded-pill m-0" type="submit" name="submit" value="Update">
                    </td>
                </tr>
            </form>
            <% } %>
        </tbody>

    </table>

</div>

<% } else { %>

    <div class="col-sm-5 col-md-5 col-lg-5 mt-5 mx-auto d-flex align-items-center row">
        <img src="images/nothing.png" class="w-75 w-md-50 mx-auto" alt="">
        <p class="fw-bold text-center" style="color: #5853BC;">Nothing to show!</p>
    </div>

<% } %>

<%-include ('partials/footer'); %>
